@using TelerikAcademy.ForumSystem.Web.Models.Home
@model AppliesViewModel

@{
    ViewBag.Title = "Admin Page";
}
@if (!User.IsInRole("Admin"))
{
    Html.RenderAction("Login", "Account");
}
else
{
<hr />
<div class="row">
    @foreach (var apply in Model.Apply)
    {
        <div class="row">
            <div class="col-md-3">
                <p><strong>Username: </strong>@apply.UserName</p>
            </div>
            <div class="col-md-3">
                <p>@Html.ActionLink("Hire", "ChangeRole", "Account", new { userId = apply.UserId, id = apply.id }, htmlAttributes: new { id = "Hire" })</p>
            </div>
            <div class="col-md-3">
                <p>@Html.ActionLink("Reject", "Reject", "Job", new { id = apply.id }, htmlAttributes: new { id = "Reject" })</p>
            </div>
        </div>
    }
</div>

<hr />
}